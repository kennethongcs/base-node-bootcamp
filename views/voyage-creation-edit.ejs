<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header', {title: 'Voyage Edit Form'}) %>
  <body>
    <main class="container mt-4">
      <form action="/voyage-creation/<%= data.id %>?_method=PUT " method="POST">
        <div class="form-group">
          <label for="vessel_name">Vessel Name:</label>
          <input
            class="form-control"
            type="text"
            name="vessel_name"
            id="vessel_name"
            value="<%= data.vessel_name %>"
            disabled
          />
        </div>
        <div class="form-group">
          <label for="voyage_number">Voyage Number:</label>
          <input
            class="form-control"
            type="text"
            name="voyage_number"
            id="voyage_number"
            value="<%= data.voyage_number %>"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-success" />
      </form>
    </main>
  </body>
</html>
