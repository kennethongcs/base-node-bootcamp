<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header', {title: 'Allocation Edit Form'}) %>
  <body>
    <main class="container mt-4">
      <form
        action="/allocation-creation/<%= data.id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <p class="font-weight-bold">Reselect all boxes again.</p>
          <label for="country_name">Country Name:</label>
          <select name="country_name" id="country_name" class="form-control">
            <option value="" disabled selected hidden>
              <%= data.country_name %>
            </option>
            <% allQueryObj.country.forEach(element => { %>
            <option value="<%= element.id %> ">
              <%= element.country_name %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="service_name">Service Name:</label>
          <select name="service_name" id="service_name" class="form-control">
            <option value="" disabled selected hidden>
              <%= data.service_name %>
            </option>
            <% allQueryObj.service.forEach(element => { %>
            <option value="<%= element.id %> ">
              <%= element.service_name %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="vessel_name">Vessel Name:</label>
          <select name="vessel_name" id="vessel_name" class="form-control">
            <option value="" disabled selected hidden>
              <%= data.vessel_name %>
            </option>
            <% allQueryObj.vessel.forEach(element => { %>
            <option value="<%= element.id %> ">
              <%= element.vessel_name %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="port_name">Port Code:</label>
          <select name="port_name" id="port_name" class="form-control">
            <option value="" disabled selected hidden>
              <%= data.port_code %>
            </option>
            <% allQueryObj.port.forEach(element => { %>
            <option value="<%= element.id %> "><%= element.port_code %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="teu">TEUs:</label>
          <input
            type="number"
            name="teu"
            id="teu"
            value="<%= data.teu %>"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="tons">Tons:</label>
          <input
            type="number"
            name="tons"
            id="tons"
            value="<%= data.tons %>"
            class="form-control"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-success" />
      </form>
    </main>
  </body>
</html>
