<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header', {title: 'Vessel / Voy Creation'}) %>
  <body>
    <main class="container mt-4">
      <div class="row">
        <!-- form to insert new vsl/voy -->
        <div
          class="col-6 border-right border-dark form-container"
          style="min-height: 500px"
        >
          <p class="font-weight-bold">Add new vsl / voy here:</p>
          <form action="/vessel-voyage-creation" method="POST">
            <label for="vessel_name">Vessel Name:</label>
            <input
              type="text"
              id="vessel_name"
              name="vessel_name"
              class="form-control"
              placeholder="eg. SINAR BINTAN"
            />
            <label for="voyage_number">Voyage Number:</label>
            <input
              type="number"
              id="voyage_number"
              name="voyage_number"
              class="form-control"
              placeholder="eg. 100"
            />
            <input type="submit" value="Submit" class="btn btn-success mt-4" />
          </form>
        </div>
        <!-- shows current vsl voy -->
        <div class="col-6"></div>
      </div>
    </main>
  </body>
</html>
