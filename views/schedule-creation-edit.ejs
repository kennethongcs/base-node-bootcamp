<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header', {title: 'Service Edit Form' }) %>
  <body>
    <main class="container mt-4">
      <form
        action="/schedule-creation/<%= data[0].id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <label for="vessel_name">Vessel Name:</label>
          <input
            type="text"
            name="vessel_name"
            id="vessel_name"
            value="<%= data[0].vessel_name %>"
            class="form-control"
            readonly="readonly"
          />
        </div>
        <div class="form-group">
          <label for="voyage_number">Voyage Number:</label>
          <input
            type="text"
            name="voyage_number"
            id="voyage_number"
            value="<%= data[0].voyage_number %>"
            class="form-control"
            readonly="readonly"
          />
        </div>
        <div class="form-group">
          <label for="service_name">Service Name:</label>
          <input
            type="text"
            name="service_name"
            id="service_name"
            value="<%= data[0].service_name %>"
            class="form-control"
            readonly="readonly"
          />
        </div>
        <div class="form-group">
          <label for="port_code">Port Code:</label>
          <input
            type="text"
            name="port_code"
            id="port_code"
            value="<%= data[0].port_code %>"
            class="form-control"
            readonly="readonly"
          />
        </div>
        <div class="form-group">
          <label for="eta">ETA:</label>
          <input
            type="date"
            name="eta"
            id="eta"
            value="<%= data[0].eta %>"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="eta">ETD:</label>
          <input
            type="date"
            name="etd"
            id="etd"
            value="<%= data[0].etd %>"
            class="form-control"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-success" />
      </form>
    </main>
  </body>
</html>
