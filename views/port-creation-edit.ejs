<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header', {title: 'Port Edit Form'}) %>
  <body>
    <main class="container mt-4">
      <form action="/port-creation/<%= data.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="port_name">Port Name:</label>
          <input
            type="text"
            name="port_name"
            id="port_name"
            class="form-control"
            value="<%= data.port_name %>"
          />
        </div>
        <div class="form-group">
          <label for="port_code">Port Code:</label>
          <input
            type="text"
            name="port_code"
            id="port_code"
            class="form-control"
            value="<%= data.port_code %>"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-success" />
      </form>
    </main>
  </body>
</html>
